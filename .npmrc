# Забороняє створення package-lock.json, якщо ви використовуєте yarn
package-lock=false

# Строгий режим перевірки залежностей
save-exact=true

# Автоматично встановлює peer dependencies
auto-install-peers=true

# Налаштування для підвищення безпеки
audit=true
fund=false

# Налаштування для зменшення розміру node_modules
prefer-dedupe=true

# Кешування для пришвидшення встановлення пакетів
prefer-offline=true
cache-min=3600

# Налаштування версійності
engine-strict=true

# Налаштування для монорепозиторіїв (якщо потрібно)
# workspace-concurrency=4